<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>New Student Â· XYZ School</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
      <nav class="navbar navbar-expand-lg navbar-white bg-white border-bottom">
            <div class="container">
                <a class="navbar-brand fw-bold" href="/">XYZ School</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>

        <body class="bg-light text-dark">


            <main class="container my-5">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-8 col-lg-6">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h4 class="card-title mb-3">Login</h4>

                                <% if (flashmsg && flashmsg.length ) { %>
                                    <div class="alert alert-success alert-dismissible fade show " role="alert"
                                        id="flashAlert">
                                        <%= flashmsg %>

                                            <button type="button" class="btn-close" data-bs-dismiss="alert"
                                                aria-label="Close"></button>
                                    </div>

                                    <script>
                                        // Hide the alert automatically after 3 seconds
                                        setTimeout(() => {
                                            const alert = document.getElementById('flashAlert');
                                            if (alert) {
                                                const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                                                bsAlert.close();
                                            }
                                        }, 5000);
                                    </script>
                                    <% } %>

                                        <form action="/login" method="post" class="mt-3">
                                            <div class="mb-3">
                                                <label class="form-label"> Username</label>
                                                <input type="text" name="username" class="form-control"
                                                    placeholder="Name" required />
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label"> Password</label>
                                                <input type="password" name="password" class="form-control"
                                                    placeholder="Password" required />
                                            </div>
                                            <div class="d-flex gap-2">
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                                <a href="/signup" class="ms-auto text-decoration-none">New User? Create an account</a>
                                            </div>
                                        </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('../includes/footer') %>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        </body>

</html>