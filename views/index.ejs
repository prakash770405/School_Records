<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Students Â· XYZ School</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity=""
        crossorigin="anonymous">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity=""
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Custom styles -->
    <link rel="stylesheet" href="/css/styles.css" />
</head>

<body class="bg-light text-dark">
    <%- include('../includes/navbar') %>
    
        <header class="container py-4">

            <!-- flash message if an event triggered like (delete, update, add). -->
            <% if (flashmsg && flashmsg.length ) { %>
                <div class="alert alert-success alert-dismissible fade show " role="alert" id="flashAlert">
                    <%= flashmsg %>
                        
                                <button type="button" class="btn-close" data-bs-dismiss="alert"
                                    aria-label="Close"></button>
                </div>

                <script>
                    // Hide the alert automatically after 3 seconds
                    setTimeout(() => {
                        const alert = document.getElementById('flashAlert');
                        if (alert) {
                            const bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                            bsAlert.close();
                        }
                    }, 5000);
                </script>
                <% } %>

                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h1 class="h3 mb-0">All Students</h1>
                            <p class="text-muted mb-0">Class roster and contact information for XYZ School</p>
                        </div>
                        <div class="text-end">
                            <span class="badge bg-primary fs-6">Total: <%= count %></span>
                        </div>
                    </div>

        </header>

        <main class="container mb-5">
            <section class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                <% if (!lists || lists.length===0) { %>
                    <div class="col">
                        <div class="alert alert-info">No students found. <a href="/data/new">Create the first
                                student</a>.</div>
                    </div>
                    <% } %>

                        <% for (let li of lists) { %>
                            <div class="col">
                                <article class="card h-100 shadow-sm student-card">
                                    <div class="card-body d-flex flex-column">
                                        <div class="d-flex align-items-start mb-3">
                                            <div
                                                class="me-3 avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center">
                                                <i class="fa-solid fa-user"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h5 class="card-title mb-0">
                                                    <%= li.name %>
                                                </h5>
                                                <p class="text-muted small mb-0"><i class="fa-solid fa-school"></i>
                                                    CLASS:<%= li.stdclass %>
                                                </p>
                                            </div>
                                        </div>

                                        <ul class="list-group list-group-flush mb-3">
                                            <li class="list-group-item"><i class="fa-regular fa-envelope me-2"></i> <a
                                                    href="mailto:<%= li.email %>">
                                                    <%= li.email %>
                                                </a></li>
                                            <li class="list-group-item"><i class="fa-solid fa-phone me-2"></i>
                                                <a href="tel:<%= li.phone %>">
                                                    <%= li.phone %>
                                                </a>
                                            </li>
                                            <li class="list-group-item"><i class="fa-solid fa-location-dot me-2"></i>
                                                <%= li.address %>
                                            </li>
                                            <li class="list-group-item"><i class="fa-solid fa-calendar-days me-2"></i>
                                                <%= li.dates %>
                                            </li>
                                        </ul>

                                        <div class="mt-auto d-flex gap-2">
                                            <a href="/data/<%= li._id %>/edit"
                                                class="btn btn-sm btn-outline-primary flex-grow-1"><i
                                                    class="fa-solid fa-pen-to-square me-1"></i> Edit</a>
                                            <form action="/data/<%= li._id %>/delete?_method=DELETE" method="post"
                                                onsubmit="return confirm('Delete <%= li.name %>? This cannot be undone.');"
                                                class="m-0">
                                                <button type="submit" class="btn btn-sm btn-danger"><i
                                                        class="fa-solid fa-trash-can me-1"></i> Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </article>
                            </div>
                            <% } %>
            </section>
        </main>

        <%- include('../includes/footer') %>


            <!-- Bootstrap JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity=""
                crossorigin="anonymous"></script>
</body>

</html>